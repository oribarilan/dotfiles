{
  "$schema": "https://opencode.ai/config.json",
  "theme": "nord",
  "model": "github-copilot/claude-opus-4.6",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_newline": "shift+enter", // this requires tmux adjustments
    "input_submit": "enter",
    "session_child_cycle": "<leader>+right,<leader>l",
    "session_child_cycle_reverse": "<leader>+left,<leader>h",
  },
  "share": "disabled",
  "lsp": {
    "pyright": {
      "command": ["npx", "-y", "-p", "pyright", "pyright-langserver", "--stdio"],
      "extensions": [".py", ".pyi"],
      "env": {
        "PYTHONPATH": "src"
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": false
    }
  }
}
